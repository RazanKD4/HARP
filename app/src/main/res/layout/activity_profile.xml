<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/img_maincardview_home"
        tools:layout_editor_absoluteX="0dp"
        android:clickable="false"
        tools:layout_editor_absoluteY="-70dp" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70sp"/>
    
    <TextView
        android:id="@+id/tv_prof_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Username"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"/>
    
    <EditText
        android:id="@+id/et_prof_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_prof_username"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_prof_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Gender"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/et_prof_username"/>

    <EditText
        android:id="@+id/et_prof_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_prof_gender"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_prof_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Height"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/et_prof_gender"/>

    <EditText
        android:id="@+id/et_prof_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_prof_height"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_prof_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Age"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/et_prof_height"/>

    <EditText
        android:id="@+id/et_prof_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_prof_age"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_saveprof"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:text="Save"
        android:textAllCaps="false"
        android:layout_marginTop="130dp"
        style="@style/ButtonPurple"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toBottomOf="@id/et_prof_height"
        tools:layout_editor_absoluteX="36dp" />

    <ImageView
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logout_svgrepo_com"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10sp"
        android:layout_marginStart="340sp"/>

    <ImageView
        android:id="@+id/btn_homepage_in_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_page_home"
        app:layout_constraintTop_toBottomOf="@+id/btn_saveprof"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="90sp"
        android:layout_marginEnd="290sp"/>

    <ImageView
        android:id="@+id/btn_program_in_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_page_workout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="90sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_saveprof" />

    <ImageView
        android:id="@+id/btn_prof_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_selected_user"
        android:layout_marginTop="90sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_saveprof"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="290sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        app:layout_constraintTop_toBottomOf="@+id/btn_homepage_in_prof"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="3sp"
        android:layout_marginEnd="290sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Program"
        app:layout_constraintTop_toBottomOf="@+id/btn_program_in_prof"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="3sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        app:layout_constraintTop_toBottomOf="@+id/btn_prof_select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="290sp"
        android:layout_marginTop="3sp"/>




</androidx.constraintlayout.widget.ConstraintLayout>