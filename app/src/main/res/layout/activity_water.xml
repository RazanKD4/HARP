        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pre-Bedtime"
        android:layout_marginTop="28sp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="270sp"
        app:layout_constraintTop_toBottomOf="@+id/glass7_imgview"
        tools:layout_editor_absoluteX="20dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_glass_grey"
        android:layout_marginTop="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="350sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pre_bedtime"
         />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_glass_grey"
        android:layout_marginTop="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="290sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pre_bedtime"
        tools:layout_editor_absoluteX="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500ml"
        android:textSize="16sp"
        android:layout_marginTop="65sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="324sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_drinkvol5"
        tools:layout_editor_absoluteX="343dp" />








